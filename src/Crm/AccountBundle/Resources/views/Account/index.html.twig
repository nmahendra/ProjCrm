{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Account list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Createdate</th>
                <th>Lastupdate</th>
                <th>Create_user_id</th>
                <th>Modifiyeduserid</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('account_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.createDate %}{{ entity.createDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.lastUpdate %}{{ entity.lastUpdate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.createuserid }}</td>
                <td>{{ entity.modifiyedUserId }}</td>
                <td>{{ entity.name }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('account_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('account_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('account_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
